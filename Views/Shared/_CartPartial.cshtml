@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@inject IHttpContextAccessor HttpContextAccessor


@{
    var session = HttpContextAccessor.HttpContext!.Session;
    string jsoncart = session.GetString(BanDongHoSolution.Controllers.CartController.CARTKEY)!;
    if (jsoncart != null)
    {
        var cart = JsonConvert.DeserializeObject<List<BanDongHoSolution.Data.Dtos.Cart.CartItem>>(jsoncart);
        <a class="nav-link text-dark" asp-route="cart">Giỏ hàng(@cart!.Count)</a>

    }
    else
    {
        <a class="nav-link text-dark" asp-route="cart">Giỏ hàng(0)</a>
    }
}